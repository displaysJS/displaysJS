{
  "name": "displaysJS",
  "version": "1.0.0",
  "description": "A player with Synchronized displays",
  "main": "displays.js",
  "repository": "https://github.com/wilfriedE/displaysJS",
  "author": "Wilfried Hounyo",
  "license": "MIT",
  "scripts": {
    "test": "mocha test/ --reporter=nyan",
    "build": "webpack --config webpack.config.js",
    "build-samples": "webpack --config example/samples/webpack.config.js",
    "build-docs": "yarn build-html-docs; yarn build-json-docs; yarn build-md-docs;",
    "build-html-docs": "documentation build src/** -f html -o docs",
    "build-json-docs": "documentation build src/** -f json -o docs/API.json",
    "build-md-docs": "documentation build src/** -f md -o docs/API.md",
    "lint-docs": "documentation lint src/**",
    "serve-docs": "documentation serve src/**",
    "watch-docs": "documentation serve --watch src/**",
    "serve-example": "lite-server --baseDir='example'"
  },
  "dependencies": {
    "eventemitter2": "^4.1.0"
  },
  "devDependencies": {
    "babel": "^6.23.0",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-runtime": "^6.26.0",
    "documentation": "^5.3.3",
    "file-loader": "^1.1.5",
    "lite-server": "^2.3.0",
    "mocha": "^4.0.1",
    "parallel-webpack": "^2.2.0",
    "webpack": "^3.7.1"
  }
}
